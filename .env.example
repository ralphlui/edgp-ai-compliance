# Environment configuration file
# Copy this file to .env and configure with your actual values

# Application Settings
APP_NAME=AI Compliance Agent
APP_VERSION=1.0.0
DEBUG=false

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Database Settings
DATABASE_URL=postgresql://compliance_user:your_password@localhost:5432/compliance_db

# Redis Settings
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600

# AI/ML Settings
OPENAI_API_KEY=your_openai_api_key_here
AI_MODEL_NAME=gpt-3.5-turbo
AI_MAX_TOKENS=2000
AI_TEMPERATURE=0.1

# Security Settings
SECRET_KEY=your-super-secret-key-change-in-production-minimum-32-characters
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# CORS Settings
ALLOWED_ORIGINS=["http://localhost:3000", "https://your-frontend-domain.com"]

# Logging Settings
LOG_LEVEL=INFO
LOG_FORMAT=json

# Compliance Engine Settings
ENABLE_AI_ANALYSIS=true
DEFAULT_FRAMEWORKS=["pdpa_singapore", "gdpr_eu"]
MAX_ASSESSMENT_TIME=300

# Data Retention Settings
DEFAULT_RETENTION_DAYS=2555
AUDIT_LOG_RETENTION_DAYS=2555

# Email Notification Settings
EMAIL_ENABLED=false
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@example.com
SMTP_PASSWORD=your-app-password

# Singapore PDPA Settings
PDPC_NOTIFICATION_THRESHOLD=500
PDPC_NOTIFICATION_TIMEFRAME_HOURS=72

# AWS SQS Settings
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here

# SQS Queue URLs (set these after running setup_aws_sqs.py --create)
SQS_MAIN_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/123456789012/remediation-workflow-main
SQS_DLQ_URL=https://sqs.us-east-1.amazonaws.com/123456789012/remediation-workflow-dlq
SQS_HIGH_PRIORITY_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/123456789012/remediation-workflow-high-priority
SQS_HUMAN_INTERVENTION_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/123456789012/remediation-human-intervention

# SQS Configuration
SQS_MESSAGE_RETENTION_PERIOD=1209600
SQS_VISIBILITY_TIMEOUT=300
SQS_RECEIVE_MESSAGE_WAIT_TIME=20
SQS_MAX_RECEIVE_COUNT=3

# Remediation Agent Settings
REMEDIATION_AGENT_ENABLED=true
REMEDIATION_MAX_CONCURRENT_WORKFLOWS=10
REMEDIATION_DEFAULT_TIMEOUT_HOURS=72
REMEDIATION_ENABLE_NOTIFICATIONS=true
REMEDIATION_AUTO_RETRY_FAILED=true
REMEDIATION_MAX_RETRY_ATTEMPTS=3