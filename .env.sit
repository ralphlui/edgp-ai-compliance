# SIT (System Integration Testing) Environment Configuration
APP_ENV=sit
APP_NAME=AI Compliance Agent (SIT)
DEBUG=false
ENVIRONMENT=staging

# SIT API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=2

# SIT Database
DATABASE_URL=postgresql://compliance_user:sit_password@sit-db-host:5432/compliance_sit

# SIT Redis
REDIS_URL=redis://sit-redis-host:6379/0

OPENSEARCH_ENDPOINT=https://search-edgp-compliance-search-dznva2w3pugqkp3zcifxgkmyky.aos.ap-southeast-1.on.aws
OPENSEARCH_ARN=arn:aws:es:ap-southeast-1:804874555546:domain/edgp-compliance-search
OPENSEARCH_INDEX_NAME=compliance-patterns
OPENSEARCH_TIMEOUT=30
OPENSEARCH_MAX_RETRIES=3

# SIT AI Settings
AI_MODEL_NAME=gpt-4o-mini
AI_TEMPERATURE=0.1
# AWS Secrets Manager secret name for AI API keys (optional - if not set, uses env vars above)
AI_SECRET_NAME=sit/edgp/secret

# SIT AWS Settings
AWS_REGION=AWS_REGION
AWS_ACCESS_KEY_ID=AWS_ACCESS_KEY_ID
AWS_SECRET_ACCESS_KEY=AWS_SECRET_ACCESS_KEY

# SIT Security
SECRET_KEY=sit-secure-secret-key-32-characters-minimum

# SIT SQS URLs
SQS_MAIN_QUEUE_URL=sqs_main_queue_url
SQS_DLQ_URL=https://sqs.ap-southeast-1.amazonaws.com/123456789012/sit-remediation-workflow-dlq

# SIT Logging
LOG_LEVEL=INFO

# EDGP Master Data Database Configuration for AWS RDS
EDGP_DB_HOST=edgp-sit.cfqm8kgg2pur.ap-southeast-1.rds.amazonaws.com
EDGP_DB_PORT=3306
EDGP_DB_NAME=masterdata
EDGP_DB_SECRET_NAME=sit/edgp/secret

# Data Retention Configuration
DEFAULT_CUSTOMER_RETENTION_YEARS=7
DEFAULT_VENDOR_RETENTION_YEARS=7
DEFAULT_LOCATION_RETENTION_YEARS=10
DEFAULT_PRODUCT_RETENTION_YEARS=5

# Compliance Configuration
COMPLIANCE_SCAN_ENABLED=true
AUTO_REMEDIATION_ENABLED=false
ENABLE_PII_MASKING=false
# Debug Logging (enabled for development debugging)
ENABLE_DETAILED_REQUEST_LOGGING=true