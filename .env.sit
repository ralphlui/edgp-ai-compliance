# Development Environment Configuration  
APP_ENV=sit
APP_NAME=AI Compliance Agent (SIT)
DEBUG=true
ENVIRONMENT=sit

# SIT API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=2

# SIT AI Settings - API keys retrieved from AWS Secrets Manager
# AI_AGENT_API_KEY and OPENAI_API_KEY will be retrieved from sit/edgp/secret
# The actual key is stored in AWS Secrets Manager under key: ai_agent_api_key
AI_AGENT_API_KEY=placeholder_will_use_secrets_manager
OPENAI_API_KEY=placeholder_will_use_secrets_manager
AWS_SECRET_NAME=sit/edgp/secret
AI_MODEL_NAME=gpt-3.5-turbo
AI_TEMPERATURE=0.1

# SIT AWS Settings (will be replaced by K8s during deployment)
AWS_REGION=AWS_REGION
AWS_ACCESS_KEY_ID=AWS_ACCESS_KEY_ID
AWS_SECRET_ACCESS_KEY=AWS_SECRET_ACCESS_KEY

# SIT Security
SECRET_KEY=sit-secure-secret-key-32-characters-minimum

# SIT SQS URLs
SQS_MAIN_QUEUE_URL=SQS_MAIN_QUEUE_URL
SQS_DLQ_URL=SQS_DLQ_URL

# SIT Logging
LOG_LEVEL=INFO

# AWS RDS Configuration for SIT - Using Secrets Manager
AWS_RDS_ENABLED=true
AWS_SECRETS_MANAGER_ENABLED=true
AWS_RDS_DATABASE=masterdata
AWS_RDS_SECRET_NAME=rds-credentials-edgp-sit


# AWS OpenSearch Configuration
OPENSEARCH_ENABLED=false
OPENSEARCH_ENDPOINT=AOSS_HOST
OPENSEARCH_INDEX_NAME=edgp-compliance-info
OPENSEARCH_TIMEOUT=30
OPENSEARCH_MAX_RETRIES=3

# Database credentials MUST be retrieved from AWS Secrets Manager only
# No hardcoded credentials - forces application to use sit/edgp/secret
# EDGP_DB_HOST, EDGP_DB_USERNAME, EDGP_DB_PASSWORD will be retrieved from AWS Secrets Manager

# Data Retention Configuration
DEFAULT_CUSTOMER_RETENTION_YEARS=7
DEFAULT_VENDOR_RETENTION_YEARS=7
DEFAULT_LOCATION_RETENTION_YEARS=10
DEFAULT_PRODUCT_RETENTION_YEARS=5

# Compliance Configuration
COMPLIANCE_SCAN_ENABLED=true
AUTO_REMEDIATION_ENABLED=false

LANGCHAIN_TRACING_V2=true
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_API_KEY=LANGCHAIN_API_KEY
LANGCHAIN_PROJECT=edgp-ai-compliance